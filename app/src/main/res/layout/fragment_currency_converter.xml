<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    tools:context=".currencyConverter.ui.CurrencyConverterFragment">

    <androidx.appcompat.widget.AppCompatSpinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/conversionsHistorySpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fromTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conversionsHistorySpinner"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:text="@string/from"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/fromCurrencyCodeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromTV"
        app:layout_constraintBottom_toBottomOf="@+id/fromCurrencyValueTV"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fromCurrencyValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fromTV"
        app:layout_constraintStart_toEndOf="@id/fromCurrencyCodeSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        android:inputType="numberDecimal"
        tools:text="1.00" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/fromToDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fromCurrencyValueTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toTv"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromToDivider"
        android:textColor="@color/black"
        android:text="@string/to"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/toCurrencyCodeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toTv"
        app:layout_constraintBottom_toBottomOf="@+id/toCurrencyValueTV"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/toCurrencyValueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/toCurrencyCodeSpinner"
        app:layout_constraintTop_toBottomOf="@+id/toTv"
        android:clickable="false"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="1.00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currencyConvertButton"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintTop_toBottomOf="@+id/toCurrencyValueTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/convert"/>
</androidx.constraintlayout.widget.ConstraintLayout>
